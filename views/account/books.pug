extends ../layout

block content
  .page-header
    h3 Sign up
  form.form-horizontal(id='books-form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='title') Title
      .col-sm-7
        input.form-control(type='title', name='title', id='title', placeholder='Title', autofocus, required)
    .form-group
      .col-sm-offset-3.col-sm-7
        button.btn.btn-success(type='submit')
          i.fa.fa-user-plus
          | Enter Book


  h3 All Books

  ul
    for book in books
      li= book.title